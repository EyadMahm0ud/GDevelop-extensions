          "events": [
            {
              "type": "BuiltinCommonInstructions::Standard",
              "conditions": [],
              "actions": [
                {
                  "type": {
                    "value": "ModVarObjet"
                  },
                  "parameters": [
                    "Object",
                    "__GrowingBehavior.CreatedTimeStamp",
                    "=",
                    "Time(\"timestamp\")"
                  ]
                }
              ]
            },
            {
              "type": "BuiltinCommonInstructions::JsCode",
              "inlineCode": [
                "function GetExtensionsBehavior(object) {",
                "    const BehaviorName = eventsFunctionContext.getBehaviorName(\"Behavior\");",
                "    return object.getBehavior(BehaviorName);",
                "}",
                "",
                "const Behavior = GetExtensionsBehavior(objects[0]);",
                "const Sprite = objects[0];",
                "const FinalFrame = Sprite._animations[0].directions[0].frames.length - 1;",
                "",
                "Behavior._setFullGrowthFrame(FinalFrame);"
              ],
              "parameterObjects": "Object",
              "useStrict": true,
              "eventsSheetExpanded": false
            }
          ],
          "parameters": [
            {
              "description": "Object",
              "name": "Object",
              "supplementaryInformation": "Sprite",
              "type": "object"
            },
            {
              "description": "Behavior",
              "name": "Behavior",
              "supplementaryInformation": "GrowingBehavior::GrowingBehavior",
              "type": "behavior"
            }
          ],
          "objectGroups": []
        },
        {
