{
  "author": "",
  "category": "User interface",
  "extensionNamespace": "",
  "fullName": "Toast",
  "helpPath": "",
  "iconUrl": "data:image/svg+xml;base64,",
  "name": "Toast",
  "previewIconUrl": "https://asset-resources.gdevelop.io/public-resources/Icons/f44ca539be858d123ae707c198f320da8afca091b54ccaea7ac3510961a284fc_bread-slice.svg",
  "shortDescription": "Provide a simple feedback about an operation in a small pop-up.",
  "version": "1.0.0",
  "description": [
    "Actions to show/hide a toast (short text inside transparent rounded box).",
    "This will work for Android and iOS exports."
  ],
  "tags": [
    "toast",
    "alert",
    "dialog",
    "mobile",
    "message"
  ],
  "authorIds": [
    "lj8txSYs8QPfahnyD8MFO4XvMv02"
  ],
  "dependencies": [
    {
      "exportName": "cordova-plugin-x-toast",
      "name": "toast",
      "type": "cordova",
      "version": "2.7.3"
    }
  ],
  "globalVariables": [],
  "sceneVariables": [],
  "eventsFunctions": [
    {
      "description": "Displays a message for seconds in a transparent rounded box.",
      "fullName": "Show a toast",
      "functionType": "Action",
      "name": "Show",
      "sentence": "Show a _PARAM2_ toast with message: _PARAM1_",
      "events": [
        {
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [
            {
              "type": {
                "value": "SystemInfo::IsNativeMobileApp"
              },
              "parameters": []
            }
          ],
          "actions": [],
          "events": [
            {
              "type": "BuiltinCommonInstructions::JsCode",
              "inlineCode": [
                "window.plugins.toast.showWithOptions(",
                "    {",
                "        message: eventsFunctionContext.getArgument(\"Message\"),",
                "        duration: eventsFunctionContext.getArgument(\"Duration\"),",
                "        position: \"bottom\" // Doesn't work but required.",
                "    }",
                ")"
              ],
              "parameterObjects": "",
              "useStrict": true,
              "eventsSheetExpanded": false
            }
          ]
        }
      ],
      "parameters": [
        {
          "description": "Message",
          "longDescription": "Toasts on Android 12 and higher is limited to two lines of text and shows the application icon next to the text. Be aware that the line length of this text varies by screen size, so it's good to make the text as short as possible.",
          "name": "Message",
          "type": "string"
        },
        {
          "description": "Duration",
          "longDescription": "Long toast stays for five seconds.\nShort toast stays for three seconds.",
          "name": "Duration",
          "supplementaryInformation": "[\"long\",\"short\"]",
          "type": "stringWithSelector"
        }
      ],
      "objectGroups": []
    },
    {
      "description": "Hide any displayed toast.",
      "fullName": "Hide a toast",
      "functionType": "Action",
      "name": "Hide",
      "sentence": "Hide the toast",
      "events": [
        {
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [
            {
              "type": {
                "value": "SystemInfo::IsNativeMobileApp"
              },
              "parameters": []
            }
          ],
          "actions": [],
          "events": [
            {
              "type": "BuiltinCommonInstructions::JsCode",
              "inlineCode": "window.plugins.toast.hide()",
              "parameterObjects": "",
              "useStrict": true,
              "eventsSheetExpanded": false
            }
          ]
        }
      ],
      "parameters": [],
      "objectGroups": []
    }
  ],
  "eventsBasedBehaviors": [],
  "eventsBasedObjects": []
}