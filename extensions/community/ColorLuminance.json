    {
      "description": "Check luminance of a RGB color.",
      "fullName": "Check luminance",
      "functionType": "Condition",
      "name": "CheckLuminance",
      "sentence": "Check if the luminace of the color _PARAM1_  _PARAM2_ _PARAM3_",
      "events": [
        {
          "type": "BuiltinCommonInstructions::JsCode",
          "inlineCode": [
            "function checkLuminance(color, operator, luminance) {",
            "  let [r, g, b] = color.split(\";\");",
            "  let colorLuminance = 0.2126 * r + 0.7152 * g + 0.0722 * b;",
            "",
            "  switch (operator) {",
            "    case \"≠\":",
            "      return colorLuminance !== luminance;",
            "    case \">\":",
            "      return colorLuminance > luminance;",
            "    case \"<\":",
            "      return colorLuminance < luminance;",
            "    case \"≥\":",
            "      return colorLuminance >= luminance;",
            "    case \"≤\":",
            "      return colorLuminance <= luminance;",
            "    default:",
            "      return colorLuminance === luminance;",
            "  }",
            "}",
            "",
            "const color = eventsFunctionContext.getArgument(\"color\");",
            "const operator = eventsFunctionContext.getArgument(\"operator\");",
            "const luminance = eventsFunctionContext.getArgument(\"luminance\");",
            "eventsFunctionContext.returnValue = checkLuminance(color, operator, luminance);"
          ],
          "parameterObjects": "",
          "useStrict": true,
          "eventsSheetExpanded": false
        }
      ],
      "parameters": [
        {
          "description": "RGB color",
          "name": "color",
          "type": "color"
        },
        {
          "description": "Operator",
          "name": "operator",
          "supplementaryInformation": "[\"=\",\">\",\"<\",\"≥\",\"≤\",\"≠\"]",
          "type": "stringWithSelector"
        },
        {
          "description": "Luminance",
          "name": "luminance",
          "type": "expression"
        }
      ],
      "objectGroups": []
    },
    {
      "description": "Check luminance between two RGB colors.",
      "fullName": "Check luminance between two colors",
      "functionType": "Condition",
      "name": "CheckLuminanceTwoColors",
      "sentence": "Check if the luminace of the color _PARAM1_  _PARAM2_ _PARAM3_",
      "events": [
        {
          "type": "BuiltinCommonInstructions::JsCode",
          "inlineCode": [
            "function checkLuminance(color1, operator, color2) {",
            "  let rgb1 = color1.split(\";\");",
            "  let rgb2 = color2.split(\";\");",
            "  let luminance1 = 0.2126 * rgb1[0] + 0.7152 * rgb1[1] + 0.0722 * rgb1[2];",
            "  let luminance2 = 0.2126 * rgb2[0] + 0.7152 * rgb2[1] + 0.0722 * rgb2[2];",
            "",
            "  switch (operator) {",
            "    case \"≠\":",
            "      return luminance1 !== luminance2;",
            "    case \">\":",
            "      return luminance1 > luminance2;",
            "    case \"<\":",
            "      return luminance1 < luminance2;",
            "    case \"≥\":",
            "      return luminance1 >= luminance2;",
            "    case \"≤\":",
            "      return luminance1 <= luminance2;",
            "    default:",
            "      return luminance1 === luminance2;",
            "  }",
            "}",
            "",
            "const color1 = eventsFunctionContext.getArgument(\"color1\");",
            "const operator = eventsFunctionContext.getArgument(\"operator\");",
            "const color2 = eventsFunctionContext.getArgument(\"color2\");",
            "eventsFunctionContext.returnValue = checkLuminance(color1, operator, color2);"
          ],
          "parameterObjects": "",
          "useStrict": true,
          "eventsSheetExpanded": false
        }
      ],
      "parameters": [
        {
          "description": "First RGB color",
          "name": "color1",
          "type": "color"
        },
        {
          "description": "Operator",
          "name": "operator",
          "supplementaryInformation": "[\"=\",\">\",\"<\",\"≥\",\"≤\",\"≠\"]",
          "type": "stringWithSelector"
        },
        {
          "description": "Second RGB color",
          "name": "color2",
          "type": "color"
        }
      ],
      "objectGroups": []
    }
