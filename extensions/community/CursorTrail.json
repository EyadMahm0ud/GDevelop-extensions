    {
      "description": "Spawn a cursor trail.",
      "fullName": "Cursor Trail",
      "functionType": "Action",
      "group": "Cursor Trail",
      "name": "CreateTrail",
      "sentence": "Create a trail every _PARAM2_ pixel(s) with a lifetime of _PARAM4_ second(s)",
      "events": [
        {
          "type": "BuiltinCommonInstructions::Comment",
          "color": {
            "b": 0,
            "g": 0,
            "r": 0,
            "textB": 255,
            "textG": 255,
            "textR": 255
          },
          "comment": "Creates the first trail object if there are none and resets the ID value"
        },
        {
          "folded": true,
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [
            {
              "type": {
                "value": "SceneInstancesCount"
              },
              "parameters": [
                "",
                "Object",
                "=",
                "0"
              ]
            },
            {
              "type": {
                "value": "BuiltinCommonInstructions::CompareNumbers"
              },
              "parameters": [
                "DistanceBetweenPositions(Variable(__CursorTrail.CursorX), Variable(__CursorTrail.CursorY), CursorX(), CursorY())",
                ">",
                "1"
              ]
            }
          ],
          "actions": [
            {
              "type": {
                "value": "ModVarScene"
              },
              "parameters": [
                "__CursorTrail.ID",
                "=",
                "0"
              ]
            },
            {
              "type": {
                "value": "ModVarScene"
              },
              "parameters": [
                "__CursorTrail.CursorX",
                "=",
                "CursorX()"
              ]
            },
            {
              "type": {
                "value": "ModVarScene"
              },
              "parameters": [
                "__CursorTrail.CursorY",
                "=",
                "CursorY()"
              ]
            },
            {
              "type": {
                "value": "Create"
              },
              "parameters": [
                "",
                "Object",
                "Variable(__CursorTrail.CursorX)",
                "Variable(__CursorTrail.CursorY)",
                "\"\""
              ]
            }
          ],
          "events": [
            {
              "type": "BuiltinCommonInstructions::Standard",
              "conditions": [
                {
                  "type": {
                    "value": "CompareArgumentAsNumber"
                  },
                  "parameters": [
                    "\"MaxObjects\"",
                    ">",
                    "0"
                  ]
                }
              ],
              "actions": [
                {
                  "type": {
                    "value": "ModVarObjet"
                  },
                  "parameters": [
                    "Object",
                    "__CursorTrail_TrailID",
                    "=",
                    "Variable(__CursorTrail.ID)"
                  ]
                },
                {
                  "type": {
                    "value": "ModVarScene"
                  },
                  "parameters": [
                    "__CursorTrail.ID",
                    "+",
                    "1"
                  ]
                }
              ]
            },
            {
              "type": "BuiltinCommonInstructions::Standard",
              "conditions": [],
              "actions": [
                {
                  "type": {
                    "value": "Wait"
                  },
                  "parameters": [
                    "GetArgumentAsNumber(\"Lifetime\")"
                  ]
                },
                {
                  "type": {
                    "value": "Delete"
                  },
                  "parameters": [
                    "Object",
                    ""
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "BuiltinCommonInstructions::Comment",
          "color": {
            "b": 0,
            "g": 0,
            "r": 0,
            "textB": 255,
            "textG": 255,
            "textR": 255
          },
          "comment": "Creates the trail if there is at least 1 trail object on the scene. The RepeatAmount is the amount of trail objects that will spawn."
        },
        {
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [
            {
              "type": {
                "value": "SceneInstancesCount"
              },
              "parameters": [
                "",
                "Object",
                ">",
                "0"
              ]
            },
            {
              "type": {
                "value": "BuiltinCommonInstructions::CompareNumbers"
              },
              "parameters": [
                "DistanceBetweenPositions(Variable(__CursorTrail.CursorX), Variable(__CursorTrail.CursorY), CursorX(), CursorY())",
                ">",
                "Variable(__CursorTrail.Spacing)"
              ]
            }
          ],
          "actions": [
            {
              "type": {
                "value": "ModVarScene"
              },
              "parameters": [
                "__CursorTrail.RepeatAmount",
                "=",
                "DistanceBetweenPositions(Variable(__CursorTrail.CursorX), Variable(__CursorTrail.CursorY), CursorX(), CursorY())"
              ]
            },
            {
              "type": {
                "value": "ModVarScene"
              },
              "parameters": [
                "__CursorTrail.RepeatAmount",
                "/",
                "clamp(abs(Variable(__CursorTrail.Spacing)), 1, 999999999)"
              ]
            }
          ],
          "events": [
            {
              "type": "BuiltinCommonInstructions::Comment",
              "color": {
                "b": 0,
                "g": 0,
                "r": 0,
                "textB": 255,
                "textG": 255,
                "textR": 255
              },
              "comment": "If optimization is enabled, multiplies the spacing of the trail objects and recalculates the RepeatAmount."
            },
            {
              "type": "BuiltinCommonInstructions::Standard",
              "conditions": [
                {
                  "type": {
                    "value": "GetArgumentAsBoolean"
                  },
                  "parameters": [
                    "\"Optimization\""
                  ]
                },
                {
                  "type": {
                    "value": "BuiltinCommonInstructions::CompareNumbers"
                  },
                  "parameters": [
                    "DistanceBetweenPositions(Variable(__CursorTrail.CursorX), Variable(__CursorTrail.CursorY), CursorX(), CursorY())",
                    ">",
                    "300"
                  ]
                }
              ],
              "actions": [
                {
                  "type": {
                    "value": "ModVarScene"
                  },
                  "parameters": [
                    "__CursorTrail.Spacing",
                    "*",
                    "DistanceBetweenPositions(Variable(__CursorTrail.CursorX), Variable(__CursorTrail.CursorY), CursorX(), CursorY())/GetArgumentAsNumber(\"OptimizationMultiplier\")"
                  ]
                },
                {
                  "type": {
                    "value": "ModVarScene"
                  },
                  "parameters": [
                    "__CursorTrail.Spacing",
                    "=",
                    "round(Variable(__CursorTrail.Spacing))"
                  ]
                },
                {
                  "type": {
                    "value": "ModVarScene"
                  },
                  "parameters": [
                    "__CursorTrail.RepeatAmount",
                    "=",
                    "DistanceBetweenPositions(Variable(__CursorTrail.CursorX), Variable(__CursorTrail.CursorY), CursorX(), CursorY())"
                  ]
                },
                {
                  "type": {
                    "value": "ModVarScene"
                  },
                  "parameters": [
                    "__CursorTrail.RepeatAmount",
                    "/",
                    "clamp(abs(Variable(__CursorTrail.Spacing)), 1, 999999999)"
                  ]
                }
              ]
            },
            {
              "type": "BuiltinCommonInstructions::Comment",
              "color": {
                "b": 0,
                "g": 0,
                "r": 0,
                "textB": 255,
                "textG": 255,
                "textR": 255
              },
              "comment": "Creates the trail object, then \"moves\" the variable that stores the cursor position closer to the actual cursor position. This repeats until the trail reaches the actual cursor position."
            },
            {
              "type": "BuiltinCommonInstructions::Repeat",
              "repeatExpression": "Variable(__CursorTrail.RepeatAmount)",
              "conditions": [],
              "actions": [
                {
                  "type": {
                    "value": "Create"
                  },
                  "parameters": [
                    "",
                    "Object",
                    "Variable(__CursorTrail.CursorX)",
                    "Variable(__CursorTrail.CursorY)",
                    "\"\""
                  ]
                },
                {
                  "type": {
                    "value": "ModVarScene"
                  },
                  "parameters": [
                    "__CursorTrail.CursorX",
                    "=",
                    "Variable(__CursorTrail.CursorX) - (Variable(__CursorTrail.CursorX) - CursorX())/Variable(__CursorTrail.RepeatAmount)"
                  ]
                },
                {
                  "type": {
                    "value": "ModVarScene"
                  },
                  "parameters": [
                    "__CursorTrail.CursorY",
                    "=",
                    "Variable(__CursorTrail.CursorY) - (Variable(__CursorTrail.CursorY) - CursorY())/Variable(__CursorTrail.RepeatAmount)"
                  ]
                }
              ],
              "events": [
                {
                  "type": "BuiltinCommonInstructions::Comment",
                  "color": {
                    "b": 0,
                    "g": 0,
                    "r": 0,
                    "textB": 255,
                    "textG": 255,
                    "textR": 255
                  },
                  "comment": "Adds an ID value to the trail objects, so that they can be deleted properly later."
                },
                {
                  "type": "BuiltinCommonInstructions::Standard",
                  "conditions": [
                    {
                      "type": {
                        "value": "CompareArgumentAsNumber"
                      },
                      "parameters": [
                        "\"MaxObjects\"",
                        ">",
                        "0"
                      ]
                    }
                  ],
                  "actions": [
                    {
                      "type": {
                        "value": "ModVarObjet"
                      },
                      "parameters": [
                        "Object",
                        "__CursorTrail.TrailID",
                        "=",
                        "Variable(__CursorTrail.ID)"
                      ]
                    },
                    {
                      "type": {
                        "value": "ModVarScene"
                      },
                      "parameters": [
                        "__CursorTrail.ID",
                        "+",
                        "1"
                      ]
                    }
                  ]
                },
                {
                  "type": "BuiltinCommonInstructions::Comment",
                  "color": {
                    "b": 0,
                    "g": 0,
                    "r": 0,
                    "textB": 255,
                    "textG": 255,
                    "textR": 255
                  },
                  "comment": "Deletes the trail after a set amount of time specified by the user."
                },
                {
                  "type": "BuiltinCommonInstructions::Standard",
                  "conditions": [],
                  "actions": [
                    {
                      "type": {
                        "value": "Wait"
                      },
                      "parameters": [
                        "GetArgumentAsNumber(\"Lifetime\")"
                      ]
                    },
                    {
                      "type": {
                        "value": "Delete"
                      },
                      "parameters": [
                        "Object",
                        ""
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "BuiltinCommonInstructions::Comment",
          "color": {
            "b": 0,
            "g": 0,
            "r": 0,
            "textB": 255,
            "textG": 255,
            "textR": 255
          },
          "comment": "Deletes the trail objects if there are too many of them."
        },
        {
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [
            {
              "type": {
                "value": "CompareArgumentAsNumber"
              },
              "parameters": [
                "\"MaxObjects\"",
                ">",
                "0"
              ]
            },
            {
              "type": {
                "value": "VarObjet"
              },
              "parameters": [
                "Object",
                "__CursorTrail.TrailID",
                "<",
                "Variable(__CursorTrail.ID)-GetArgumentAsNumber(\"MaxObjects\")"
              ]
            }
          ],
          "actions": [
            {
              "type": {
                "value": "Delete"
              },
              "parameters": [
                "Object",
                ""
              ]
            }
          ]
        },
        {
          "type": "BuiltinCommonInstructions::Comment",
          "color": {
            "b": 0,
            "g": 0,
            "r": 0,
            "textB": 255,
            "textG": 255,
            "textR": 255
          },
          "comment": "Resets the spacing if the optimization kicked in."
        },
        {
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [
            {
              "type": {
                "value": "VarScene"
              },
              "parameters": [
                "__CursorTrail.Spacing",
                "!=",
                "GetArgumentAsNumber(\"Spacing\")"
              ]
            }
          ],
          "actions": [
            {
              "type": {
                "value": "ModVarScene"
              },
              "parameters": [
                "__CursorTrail.Spacing",
                "=",
                "GetArgumentAsNumber(\"Spacing\")"
              ]
            }
          ]
        }
      ],
      "parameters": [
        {
          "description": "Object acting as the trail",
          "name": "Object",
          "type": "objectList"
        },
        {
          "description": "Spacing between the trail objects",
          "longDescription": "This is used to determine when to spawn another trail object and where. Spacing of value 1 means that the trail will spawn for every pixel the mouse has moved.",
          "name": "Spacing",
          "type": "expression"
        },
        {
          "description": "Maximum amount of trail objects",
          "longDescription": "Set it to 0 for infinite. It's recommended to set a limit to avoid performance issues.",
          "name": "MaxObjects",
          "type": "expression"
        },
        {
          "description": "Lifetime of the trail (in seconds)",
          "name": "Lifetime",
          "type": "expression"
        },
        {
          "description": "The layer to spawn the trail on",
          "name": "Layer",
          "type": "layer"
        },
        {
          "defaultValue": "yes",
          "description": "Automatically optimize the trail (recommended)",
          "name": "Optimization",
          "optional": true,
          "type": "yesorno"
        },
        {
          "description": "Optimization modifier",
          "longDescription": "The lower the value is, the more aggressive the optimization will become. Default is 100",
          "name": "OptimizationMultiplier",
          "type": "expression"
        }
      ],
      "objectGroups": []
    }
  ],
