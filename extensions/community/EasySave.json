            {
              "type": "BuiltinCommonInstructions::JsCode",
              "inlineCode": "let data = JSON.parse(localStorage.getItem(\"GDJS_EasySave\"));\nlet i =0;\nlet objKeys = Object.keys(data);\nlet objValues = Object.values(data);\nfor (i=0; i<objValues.length; i++) {\n\n    let temp = Object.values(objValues[i]);\n    if( typeof(temp[0]) === 'string'){\n        var structureVar = runtimeScene.getVariables().get(\"EasySaveData\").getChild(objKeys[i]).setString(Object.values(objValues[i]));\n    }else{\n        var structureVar = runtimeScene.getVariables().get(\"EasySaveData\").getChild(objKeys[i]).setNumber(Object.values(objValues[i]));\n    } \n}",
              "parameterObjects": "",
              "useStrict": true,
              "eventsSheetExpanded": true
            }
          ]
        }
      ],
