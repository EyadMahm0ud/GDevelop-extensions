  "category": "General",
  "extensionNamespace": "",
  "fullName": "Large Number Prefixer",
  "helpPath": "",
  "iconUrl": "data:image/svg+xml;base64,",
  "name": "LargeNumberPrefixer",
  "previewIconUrl": "https://asset-resources.gdevelop.io/public-resources/Icons/3436166f7796e1ce223d21379ef833e665967f12973499d1aef9e64c26f3d180_size-xxl.svg",
  "shortDescription": "Adds a prefix to a large number.",
  "version": "1.0.0",
  "description": [
    "This extension provides support for adding prefixes for large numbers. It provides:",
    "> Support for custom prefixes.",
    "> Custom place name intervals."
  ],
  "tags": [
    "number",
    "score",
    "prefix",
    "stats",
    "statistics"
  ],
  "authorIds": [
    "xpwUwByyImTDcHEqDUqfyg0oRBt1"
  ],
  "dependencies": [],
  "eventsFunctions": [
    {
      "description": "Shorten a large number by adding a prefix through an array.",
      "fullName": "Add a prefix for large number",
      "functionType": "StringExpression",
      "name": "AddPrefix",
      "sentence": "",
      "events": [
        {
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [],
          "actions": [
            {
              "type": {
                "value": "CopyArgumentToVariable"
              },
              "parameters": [
                "\"_structure\"",
                "_shortener_text_list"
              ]
            }
          ]
        },
        {
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [
            {
              "type": {
                "value": "BuiltinCommonInstructions::CompareNumbers"
              },
              "parameters": [
                "StrLength(GetArgumentAsString(\"_value\"))-1",
                ">=",
                "GetArgumentAsNumber(\"_base_change_interval\")"
              ]
            }
          ],
          "actions": [
            {
              "type": {
                "value": "SetReturnString"
              },
              "parameters": [
                "ToString(roundTo((GetArgumentAsNumber(\"_value\")/pow(10,(StrLength(GetArgumentAsString(\"_value\"))-1)- mod(StrLength(GetArgumentAsString(\"_value\"))-1, GetArgumentAsNumber(\"_base_change_interval\")))), GetArgumentAsNumber(\"_round_to_decimal_place\")))+VariableString(Array[(StrLength(GetArgumentAsString(\"_value\"))-1)- mod(StrLength(GetArgumentAsString(\"_value\"))-1, GetArgumentAsNumber(\"_base_change_interval\"))])"
              ]
            }
          ]
        },
        {
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [
            {
              "type": {
                "value": "BuiltinCommonInstructions::CompareNumbers"
              },
              "parameters": [
                "StrLength(GetArgumentAsString(\"_value\"))-1",
                "<",
                "GetArgumentAsNumber(\"_base_change_interval\")"
              ]
            }
          ],
          "actions": [
            {
              "type": {
                "value": "SetReturnString"
              },
              "parameters": [
                "ToString(GetArgumentAsNumber(\"_value\"))+VariableString(Array[(StrLength(GetArgumentAsString(\"_value\"))-1)- mod(StrLength(GetArgumentAsString(\"_value\"))-1, GetArgumentAsNumber(\"_base_change_interval\"))])"
              ]
            }
          ]
        }
      ],
      "expressionType": {
        "type": "string"
      },
      "parameters": [
        {
          "description": "A structure",
          "name": "_structure",
          "type": "scenevar"
        },
        {
          "description": "The value to shorten",
          "longDescription": "Note: Please round the value to avoid any bugs.",
          "name": "_value",
          "type": "expression"
        },
        {
          "description": "The place name changes every n place",
          "name": "_base_change_interval",
          "type": "expression"
        },
        {
          "description": "Round to decimal place",
          "name": "_round_to_decimal_place",
          "type": "expression"
        }
      ],
      "objectGroups": []
    }
  ],
  "eventsBasedBehaviors": [],
  "eventsBasedObjects": []
}