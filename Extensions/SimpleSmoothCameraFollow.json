      "description": "Have the camera follow an object smoothly.",
      "fullName": "Simple smooth camera follow",
      "functionType": "Action",
      "group": "",
      "name": "SmoothCameraFollow",
      "private": false,
      "sentence": "Camera _PARAM4_ (layer: _PARAM5_) will follow _PARAM1_ smoothly with speed x: _PARAM2_, y: _PARAM3_ and between bounds (_PARAM6_, _PARAM7_), (_PARAM8_, _PARAM9_)",
      "events": [
        {
          "disabled": false,
          "folded": false,
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [],
          "actions": [
            {
              "type": {
                "inverted": false,
                "value": "SetCameraX"
              },
              "parameters": [
                "",
                "=",
                "clamp(lerp(CameraX(GetArgumentAsString(\"CameraLayer\"), GetArgumentAsNumber(\"CameraNumber\")), Object.CenterX(), GetArgumentAsNumber(\"FollowSpeedX\")), GetArgumentAsNumber(\"UpperLeftX\") + CameraWidth(GetArgumentAsString(\"CameraLayer\"), GetArgumentAsNumber(\"CameraNumber\"))/2, GetArgumentAsNumber(\"BottomRightX\") - CameraWidth(GetArgumentAsString(\"CameraLayer\"), GetArgumentAsNumber(\"CameraNumber\"))/2)",
                "GetArgumentAsString(\"CameraLayer\")",
                "GetArgumentAsNumber(\"CameraNumber\")"
              ],
              "subInstructions": []
            },
            {
              "type": {
                "inverted": false,
                "value": "SetCameraY"
              },
              "parameters": [
                "",
                "=",
                "clamp(lerp(CameraY(GetArgumentAsString(\"CameraLayer\"), GetArgumentAsNumber(\"CameraNumber\")), Object.CenterY(), GetArgumentAsNumber(\"FollowSpeedY\")), GetArgumentAsNumber(\"UpperLeftY\") + CameraHeight(GetArgumentAsString(\"CameraLayer\"), GetArgumentAsNumber(\"CameraNumber\"))/2, GetArgumentAsNumber(\"BottomRightY\") - CameraHeight(GetArgumentAsString(\"CameraLayer\"), GetArgumentAsNumber(\"CameraNumber\"))/2)",
                "GetArgumentAsString(\"CameraLayer\")",
                "GetArgumentAsNumber(\"CameraNumber\")"
              ],
              "subInstructions": []
            }
          ],
          "events": []
        }
      ],
