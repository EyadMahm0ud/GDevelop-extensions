          "type": "BuiltinCommonInstructions::JsCode",
          "inlineCode": "  window._extensionInternetStatusChecker = {\r\n    Status: false,\r\n    UrlBasis: 'https://example.com/',\r\n    FrequencyCheckSeconds: 5\r\n  };\r\n\r\n\r\n  // Checks internet via ping method\r\n  const checkOnlineStatus = async () => {\r\n    try {\r\n      const online = await fetch(window._extensionInternetStatusChecker.UrlBasis, {\r\n        method: 'GET',\r\n        mode: 'no-cors',\r\n        cache: 'no-cache',\r\n      });\r\n\r\n      return online.status == 0;\r\n    } catch (e) {\r\n      return false;\r\n    }\r\n  };\r\n\r\n  // Check internet if browser/device detects an event\r\n  window.addEventListener('load', detectInternet);\r\n  window.addEventListener('online', detectInternet);\r\n  window.addEventListener('offline', detectInternet);\r\n  setInterval(detectInternet, window._extensionInternetStatusChecker.FrequencyCheckSeconds*1000);\r\n\r\n  // Update Status in a variable\r\n  async function detectInternet() {\r\n    if(await checkOnlineStatus()) {\r\n        window._extensionInternetStatusChecker.Status = true;\r\n    } else {\r\n        window._extensionInternetStatusChecker.Status = false;\r\n    }\r\n  }\r\n\r\n  detectInternet();",
